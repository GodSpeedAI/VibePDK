{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": ".",
        "allowJs": false,
        "noEmit": true
    },
    "include": [
        "{{cookiecutter.project_slug}}/tools/**/*.ts",
        "{{cookiecutter.project_slug}}/tests/**/*.ts",
        "{{cookiecutter.project_slug}}/generators/**/*.ts"
    ]
}
