{
  "servers": {
    // Example MCP server configuration. MCP servers allow you to integrate external
    // models or services into VS Code’s agent mode. This sample config uses
    // environment variables for authentication instead of hardcoding secrets.
    "github-mcp": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp",
      "headers": {
        "Authorization": "Bearer ${env:GITHUB_MCP_TOKEN}"
      }
    }
  }
}
