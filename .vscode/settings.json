{
  // Enable Copilot instruction files and prompt files for this workspace
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "chat.promptFiles": true,
  // Define locations for prompt files (enabled) and instructions files. Relative
  // paths are resolved from the workspace root.
  "chat.promptFilesLocations": {
    ".github/prompts": true,
    "prompts/**": false
  },
  "chat.instructionsFilesLocations": {
    ".github/instructions": true
  },
  // Enable discovery of custom chat modes stored in the `.github/chatmodes` folder.
  "chat.modeFilesLocations": {
    ".github/chatmodes": true
  },
  // Never automatically approve tool calls; disabling autoApprove protects
  // against prompt injection attacks that set `chat.tools.autoApprove`.
  "chat.tools.autoApprove": false,
  // Additional settings can be added here to customise chat modes, context
  // limits, or default model. Keep these defaults minimal for clarity.
  // For example:
  // "github.copilot.model": "GPT-4o"
  // Instruct VS Code to treat this workspace as trusted only when explicitly
  // allowed. Users should confirm trust before running tasks or scripts.
  "security.workspace.trust.untrustedFiles": "newWindow"
}
